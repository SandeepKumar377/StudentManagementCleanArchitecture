@model AttendExamVM
@{
    ViewData["Title"] = "AttendExam";
}

<h1>Exam Paper</h1>
@if (Model.Message=="")
{
    <form asp-controller="student" asp-action="AttendExam" method="Post">
        <input type="hidden" asp-for="StudentId" />
        <ul>
            @for (int i = 0; i < Model.QnAsVMs!.Count(); i++)
            {
                <input type="hidden" asp-for="@Model.QnAsVMs![i].QnAsId" />
                <input type="hidden" asp-for="@Model.QnAsVMs![i].ExamId" />
                <li>
                    <label for="@Model.QnAsVMs![i].QuestionTitle">@Model.QnAsVMs![i].QuestionTitle</label>
                </li>
                <li>
                    <select asp-for="@Model.QnAsVMs[i].SelectedAnswer">
                        <option value="1">@Model.QnAsVMs[i].Option1</option>
                        <option value="2">@Model.QnAsVMs[i].Option2</option>
                        <option value="3">@Model.QnAsVMs[i].Option3</option>
                        <option value="4">@Model.QnAsVMs[i].Option4</option>
                    </select>
                </li>
            }
        </ul>
        <button type="submit">Submit</button>
</form>
}

